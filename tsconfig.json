{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "jsx": "preserve",
    "types": ["astro/client", "astro/env"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true  
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".astro/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
