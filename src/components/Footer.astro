---
const currentYear = new Date().getFullYear();
---

<footer>
    <div class="footer-container">
        <div class="footer-content">
            <div class="footer-left">
                <span class="copyright">Design and development &copy; {currentYear} by Johanna Sneed</span>
            </div>
            <nav class="footer-nav">
                <a href="mailto:contact@johannasneed.com" class="footer-link" data-color="#FF4444">Email</a>
                <a href="https://linkedin.com/in/johannasneed" target="_blank" class="footer-link" data-color="#0077B5">LinkedIn</a>
                <a href="https://medium.com/@johannasneed" target="_blank" class="footer-link" data-color="#00AB6C">Medium</a>
                <a href="https://bsky.app/profile/johannasneed.com" target="_blank" class="footer-link" data-color="#0096F5">Bluesky</a>
            </nav>
        </div>
    </div>
</footer>

<style>
    footer {
        margin-top: auto;
        padding: var(--space-lg) 0;
        border-top: 1px solid var(--color-border);
        position: relative;
        overflow: hidden;
        transition: background-color 0.5s var(--ease-out-spring);
    }

    .footer-bg {
        position: absolute;
        inset: 0;
        opacity: 0;
        transition: all 0.5s var(--ease-out-spring);
    }

    .footer-container {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 var(--space-xl);
        position: relative;
        z-index: 1;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: var(--space-lg);
    }

    .footer-left {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        position: relative;
        z-index: 2;
    }

    .copyright {
        font-family: var(--font-mono);
        font-size: 0.875rem;
        color: var(--color-muted);
    }

    .footer-nav {
        display: flex;
        gap: var(--space-md);
    }

    .footer-link {
        font-family: var(--font-mono);
        font-size: 0.875rem;
        color: var(--color-muted);
        text-decoration: none;
        transition: color 0.3s ease;
        position: relative;
        z-index: 2;
    }

    .footer-link:hover {
        color: var(--color-fg);
    }

    .email-link {
        font-family: var(--font-mono);
        font-size: 0.875rem;
        color: var(--color-accent);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .email-link:hover {
        color: var(--color-muted);
    }

    @media (max-width: 768px) {
        .footer-container {
            padding: 0 var(--space-md);
        }

        .footer-content {
            flex-direction: column;
            gap: var(--space-md);
            align-items:flex-start;
            
        }
        .footer-nav{
            display: flex;
            flex-direction: column;
            align-items:flex-start;
            gap: var(--space-sm);
            width: 100%;
        }
        .footer-link{
            border-bottom:1px solid var(--color-border);
            width: 100%;
            padding-bottom: var(--space-xs);
        }
    }
</style>

<script>
    const footer = document.querySelector('footer');
    const footerBg = document.querySelector('.footer-bg');
    const links = document.querySelectorAll('.footer-link');

    links.forEach(link => {
        link.addEventListener('mouseenter', () => {
            const color = link.getAttribute('data-color');
            if (footer instanceof HTMLElement && color) {
                footer.style.backgroundColor = `${color}10`; // 10 is hex for 0.06 opacity
            }
        });

        link.addEventListener('mouseleave', () => {
            if (footer instanceof HTMLElement) {
                footer.style.backgroundColor = '';
            }
        });
    });
</script>
