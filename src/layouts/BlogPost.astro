---
import Layout from './Layout.astro';
const { frontmatter } = Astro.props;
const { title, date, tags } = frontmatter;
---

<Layout>
    <article class="blog-post">
        <div class="content-wrapper">
            <main class="post-content">
                <header class="post-header">
                    <time>{date}</time>
                    <h1>{title}</h1>
                </header>
                <div class="post-body">
                    <slot />
                </div>
            </main>

            <aside class="post-sidebar">
                <div class="sidebar-section">
                    <h2>Tags</h2>
                    <div class="tags-list">
                        {tags.map(tag => (
                            <a href={`/writing?tag=${tag}`} class="tag">
                                {tag}
                            </a>
                        ))}
                    </div>
                </div>
            </aside>
        </div>
    </article>
</Layout>

<style>
    .blog-post {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: var(--space-xl) var(--space-lg);
    }

    .content-wrapper {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: var(--space-xl);
    }

    .post-content {
        max-width: 65ch;
    }

    .post-header {
        margin-bottom: var(--space-md);
    }
    .post-header h1{
        font-size: 3rem;
        line-height: 1;
    }

    .post-sidebar {
        position: sticky;
        top: 5rem;
        height: fit-content;
    }

    .sidebar-section {
        padding: var(--space-lg);
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--curve-sm);
        margin-bottom: var(--space-lg);
    } 

    .sidebar-section h2 {
        font-size: 1.25rem;
        margin: 0 0 var(--space-md);
    }

    .tags-list {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-xs);
    }

    .tag {
        font-family: var(--font-mono);
        font-size: 0.875rem;
        color: var(--color-muted);
        padding: 0.5rem 1rem;
        border-radius: 2px;
        text-decoration: none;
        transition: all 0.3s var(--ease-out-spring);
        border: 1px solid var(--color-border);
        background: var(--color-surface);
    }

    .tag:hover {
        background: var(--color-accent);
        color: white;
        border-color: var(--color-accent);
    }

    .related-posts {
        display: flex;
        flex-direction: column;
        gap: var(--space-md);
    }

    .related-post {
        text-decoration: none;
        color: inherit;
        transition: transform 0.3s var(--ease-out-spring);
    }

    .related-post:hover {
        transform: translateX(var(--space-xs));
    }

    .related-post h3 {
        font-size: rem;
        margin: 0 0 var(--space-xs);
        color: var(--color-fg);
    }

    .related-post p {
        font-size: 0.875rem;
        color: var(--color-muted);
        margin: 0;
    }

    @media (max-width: 768px) {
        .content-wrapper {
            grid-template-columns: 1fr;
        }

        .post-sidebar {
            position: static;
            margin-top: var(--space-xl);
        }
    }
</style>

<script>
    // Handle tag clicks
    document.querySelectorAll('.tag').forEach(tag => {
        tag.addEventListener('click', (e) => {
            e.preventDefault();
            const tag = e.currentTarget as HTMLAnchorElement;
            const tagValue = tag.getAttribute('href')?.split('=')[1];
            sessionStorage.setItem('selectedTag', tagValue || '');
            window.location.href = '/writing';
        });
    });
</script>
